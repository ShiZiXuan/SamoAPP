<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <com.langwing.samocharge._view.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginTop="15dp"
            android:src="@drawable/default_avatar" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:textColor="@color/white_ff"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tv_name"
            android:background="@drawable/level"
            android:paddingLeft="35dp"
            android:paddingRight="10dp"
            android:text="LV.1"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="15dp"
            android:text="用户状态"
            android:textColor="@color/white_ff"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_status"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_status"
            android:background="@drawable/bg_green_6f"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:textColor="@color/yellow_f59"
            android:textSize="13sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_perfect_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_status"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_verified"
            android:background="@drawable/bg_green_6f"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:textColor="@color/yellow_f59"
            android:textSize="13sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_my_wallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/qianbao"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="我的钱包"
        android:textColor="@color/black_64"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />

    <TextView
        android:id="@+id/tv_my_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/wodedingdan"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="我的订单"
        android:textColor="@color/black_64"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f2" />
    <TextView

        android:id="@+id/tv_my_record_charge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/chongdianjilu"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="充电记录"
        android:textColor="@color/black_64"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f2" />
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/xiaoxi"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="消息"
        android:textColor="@color/black_64"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f2" />

    <TextView
        android:id="@+id/tv_collection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/shouchang"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="我的收藏"
        android:textColor="@color/black_64"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/gray_f2" />



    <TextView
        android:id="@+id/rl_consumer_hotline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/dianhua"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="联系我们"
        android:textColor="@color/black_64"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f2" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/unite_ripple"
        android:drawableLeft="@drawable/shezhi"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="设置"
        android:textColor="@color/black_64"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f2" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/white_ff"
                android:background="@drawable/shape_guide_bg_defaut"
               android:layout_marginTop="30dp"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/item_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李青青"
                android:layout_toRightOf="@id/iv"
                android:layout_marginTop="14dp"
                android:textColor="@color/black_07"
                />
            <TextView
                android:id="@+id/item_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18848980064"
                android:layout_toRightOf="@id/item_address_name"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京这里那里aaaaa楼100栋302室"
                android:textColor="@color/black_07"
                android:layout_alignLeft="@id/item_address_name"
                android:layout_below="@id/item_address_name"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/black_83"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/black_83"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                />
    </LinearLayout>
</LinearLayout>
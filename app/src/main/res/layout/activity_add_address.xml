<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="._activity._setting.AddAddressActivity">
<include layout="@layout/title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="收货人"
            android:textColor="@color/black_32"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/et_change_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="@color/black_32"
            android:textSize="16sp"
            android:hint="输入姓名"
            android:layout_marginLeft="30dp"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:layout_toRightOf="@id/tv"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <RelativeLayout
        android:id="@+id/tv_setting_safe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        >
        <android.support.v7.widget.AppCompatTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:text="手机号码"
            android:textColor="@color/black_32"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right_arrow_btn"
            android:paddingRight="12dp"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="所在地区"
        android:textColor="@color/black_32"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@null"
        android:hint="详细地址：如道路、门牌号、小区、楼栋号、单元室等"
        android:textSize="15sp"
        android:gravity="top"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_f2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_setting_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:text="设为默认地址"
            android:textColor="@color/black_32"
            android:textSize="16sp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
</LinearLayout>
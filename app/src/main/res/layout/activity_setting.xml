<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="我的收货地址"
        android:textColor="@color/black_32"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <RelativeLayout
        android:id="@+id/tv_setting_safe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        >
    <android.support.v7.widget.AppCompatTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:text="安全设置"
        android:textColor="@color/black_32"
        android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号、密码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right_arrow_btn"
            android:paddingRight="12dp"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_setting_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:text="接收消息提醒"
            android:textColor="@color/black_32"
            android:textSize="16sp" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="12dp"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_f2" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_setting_suggestion"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="意见反馈"
        android:textColor="@color/black_32"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />
    <RelativeLayout
        android:id="@+id/tv_about_samo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:text="关于"
            android:textColor="@color/black_32"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号10.1.1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right_arrow_btn"
            android:paddingRight="12dp"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/gray_f2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bt_out_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unite_ripple"
        android:drawableRight="@drawable/right_arrow_btn"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="退出登录"
        android:textColor="@color/black_32"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f2" />

</LinearLayout>
